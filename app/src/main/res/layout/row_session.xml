<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item_layout_session_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardUseCompatPadding="true">
    <!--android:onClick="onClickAction"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    android:layout_marginBottom="4dp"-->
    <!--padding amount is equal to maxCardElevation + (1 - cos45) * cornerRadius on the sides
    and maxCardElevation * 1.5 + (1 - cos45) * cornerRadius on top and bottom.-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:background="@color/accent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_session_row_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="false"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="31 Janeiro" />

                    <TextView
                        android:id="@+id/text_view_session_start_end"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        tools:text="INICIO-FIMt" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/text_view_session_row_titulo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxHeight="65dp"
                        android:maxLines="2"
                        android:minHeight="65dp"
                        android:minLines="2"
                        android:paddingBottom="10dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:textSize="20sp"
                        tools:text="TITULO " />

                    <TextView
                        android:id="@+id/text_view_session_row_sala"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        tools:text="SALA" />

                    <TextView
                        android:id="@+id/text_view_session_row_track"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:gravity="end"
                        tools:text="Track" />

                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/checkbox_session_to_agenda" />

            <RatingBar
                android:id="@+id/ratingBarSessions"
                style="@android:style/Widget.Holo.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5" />

        </FrameLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>